RewriteEngine On
RewriteBase /

# 1. Protect sensitive folders
RewriteRule ^(config|src|docker)/ - [F,L]

# 2. If the file/directory exists in the root, serve it (e.g., favicon)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3. Everything else goes to your root router
RewriteRule ^ index.php [L,QSA]

Options -Indexes